<?xml version="1.0" encoding="utf-8"?>

<openerp>
<data>

<record id="purchase_order_view_form" model="ir.ui.view">
    <field name="name">purchase.order.product.uom.form</field>
    <field name="model">purchase.order</field>
    <field name="inherit_id" ref="purchase.purchase_order_form"/>
    <field name="arch" type="xml">
      <xpath expr="//field[@name='product_uom']" position="after">
          <field name="product_uom_qty" groups="product.group_uom"/>
          <field name="product_uom_id" groups="product.group_uom"/>
      </xpath>
      <xpath expr="//field[@name='product_uom']" position="attributes">
          <attribute name="string">Unit Of Measure</attribute>
      </xpath>
    </field>
</record>

</data>
</openerp>
